<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Calendar ViewPager2 - takes full screen -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/calendarViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Control Bar - floating at bottom, smaller buttons -->
    <LinearLayout
        android:id="@+id/controlBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:elevation="8dp"
        android:padding="4dp">

        <!-- View Type Buttons - much smaller -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTwoWeekView"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:text="@string/view_two_week"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:contentDescription="@string/cd_two_week_view" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMonthView"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:text="@string/view_month"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:contentDescription="@string/cd_month_view" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThreeDayView"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:text="@string/view_three_day"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:contentDescription="@string/cd_three_day_view" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOneDayView"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:text="@string/view_one_day"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:contentDescription="@string/cd_one_day_view" />

        <!-- Small spacer -->
        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <!-- Settings Button - smaller -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="4dp"
            app:icon="@android:drawable/ic_menu_preferences"
            app:iconSize="24dp"
            android:contentDescription="@string/cd_settings" />

    </LinearLayout>

</FrameLayout>
